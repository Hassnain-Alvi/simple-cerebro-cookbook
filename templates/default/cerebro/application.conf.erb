# Secret key
# ~~~~~
# The secret key is used to secure cryptographics functions.
# If you deploy your application to several instances be sure to use the same key!
application.secret="<%= node['cerebro']['config']['application.secret'] %>"

# The application languages
# ~~~~~
application.langs="<%= node['cerebro']['config']['application.langs'] %>"

hosts = [
  {
    host = "<%= node['cerebro']['config']['host'] %>"
    <% if node['cerebro']['config']['esuser'] || node['cerebro']['config']['espass'] %>
    auth = {
      username = "<%= node['cerebro']['config']['esuser'] %>"
      password = "<%= node['cerebro']['config']['espass'] %>"
    }
    <% end %>
  }
]

<% if node['cerebro']['config']['ignore_ssl_certs'] %>
play.ws.ssl.loose.acceptAnyCertificate=true
<% end %>

